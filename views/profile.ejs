<!doctype html>
<html>
<head>
    <title>Barista App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>

  <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">The Coffee House</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <% if (user.local.email) { %>
          <li><strong>id</strong>: <%= user._id %></li>
          <li><strong>email</strong>: <%= user.local.email %></li>
          <li><a href="/unlink/local" class="">Close Account</a></li>
          <% } else { %>
          <li><a href="/connect/local" class="btn btn-default">Connect Local</a></li>
          <% } %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/logout"><span class="glyphicon glyphicon-user"></span> Logout</a></li>
      </ul>
    </div>
  </div>
  </nav>
  <div id="bg">
  <div id="search">
      <section class="orders">
      <h3>Orders</h3>
      <ul class="messages">
        <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].complete == false) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].coffee %></span>
              <span><i class="far fa-circle"></i></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </section>
    <section class="orders">
      <h3>Orders Completed</h3>
      <ul class="messages">
        <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].complete == true) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].coffee %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            </li>
          <% } %>
        <% } %>
      </ul>
    </section>
  </div>
</div>
    <script src="main.js"></script>
</body>
</html>
